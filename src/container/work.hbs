{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
	{{#with main}}
	<main>
		<section>
			{{> title data="Work history" big=true}}
			<div>
				<ul>
					{{#each works}}
					<li>
						<div>{{position}}</div>

						<br>
						{{!-- <div>
							<a href="{{company.url}}">{{company.name}}</a>
						</div> --}}

						<div>
							{{duration.from}} -
							{{#if duration.to}}
							{{duration.to}}
							{{else}}
							(досі працюємо)
							{{/if}}
						</div>

						<br>

						<div>
							{{#if company.url}}
							{{> link text=company.name href=company.url blank=true noLine=true}}
							{{else}}
							{{company.name}}
							{{/if}}
						</div>
						{{!-- <div><a href="{{company.url}}" target="_blank">{{company.name}}</a></div> --}}

						<div>
							<strong>Projects ({{projectAmount}})</strong>
						</div>

						<br>

						<ul>
							{{#each projects}}
							<li>
								<div>{{> link text=name href=url blank=true noLine=true}}</div>
								<br>
								<div>
									<p>
										{{about}}
									</p>
								</div>

								<br>

								<div>
									<em>
										Project stacks
									</em>
								</div>
								<div>({{stackAmount}})</div>
								{{!-- <div>({{awardAmount}})</div> --}}

								<br>

								<ul>
									{{#each stack}}
									<li>
										{{name}}
									</li>
									{{/each}}
								</ul>
								<br>
								<div>
									<em>
										Project award
									</em>
								</div>
								<br>
								<ul>
									{{#each award}}
									<li>
										{{name}}
									</li>
									{{/each}}
								</ul>

							</li>
							{{/each}}
						</ul>


					</li>
					{{/each}}
				</ul>
			</div>
		</section>
	</main>
	{{/with}}
</div>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}