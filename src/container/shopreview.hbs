<main class="p-5">

    <div class="row">

        <div class="card">
            {{#with navigation}}
            <div class="nav flex">
                {{#each links}}
                <div class="nav-item">
                    <a href='{{href}}' class="nav-link">{{text}}</a>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>

        <div class="row mt-5">
            <div class="col-8">
                {{#with formBlock}}
                <h1>{{header}}</h1>
                <div>
                    {{#with rating}}
                    <div>
                        {{title}}: {{value}}
                    </div>
                    {{/with}}
                </div>
                <div>
                    {{#with actionBlock}}
                    <div class="col-12">
                        <div class="nav nav-tabs">
                            {{#each tabs}}
                            <div class="nav-item">
                                <a href="#" class="nav-link {{#if isActive}}active{{/if}}"><b>{{text}}</b></a>
                            </div>
                            {{/each}}
                        </div>

                        <div class="pt-5 pb-4">
                            <hr>
                        </div>

                        <div class="card">
                            <div class="card-body">
                                {{#with report}}
                                <div class="pb-3">
                                    {{title}}
                                </div>
                                {{#with button}}
                                <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                                {{/with}}
                                {{/with}}
                            </div>
                        </div>
                    </div>
                    {{/with}}
                </div>

                <div class="pt-5">
                    <hr>
                </div>

                <div class="pt-5">
                    {{#with feedbackBlock}}
                    <h2>{{title}}</h2>
                    <div class="pt-5">
                        {{#each buttons}}
                        <a href="{{link}}"
                            class="btn btn-{{#if isWarning}}warning{{else}}{{#if isSuccess}}success{{else}}{{#if isDanger}}danger{{/if}}{{/if}}{{/if}}">{{text}}</a>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>

            <div class="col-4">
                {{#with goodsInfo}}
                <div class="card">
                    <div class="card-body">
                        <img class="card-img-top" src="{{photo}}" alt="{{name}}">
                        {{name}}
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        <big><b>{{price}}</b></big>
                        {{#if inMarket}}
                        <div>Є в наявності</div>
                        {{/if}}
                        {{#each buttons}}
                        <div class="pb-2">
                            <a href="{{link}}"
                                class="btn btn-{{#if isPrimary}}primary{{else}}{{#if isSecondary}}secondary{{/if}}{{/if}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        {{#with seller}}
                        <div>
                            {{title}}: <b>{{value}}</b>
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>

            {{/with}}
        </div>

        <div class="mt-5 mb-5">
            <hr>
        </div>

        <div class="col-12">
            {{> reviewItem}}
        </div>

        <div class="col-12">
            <div class="card text-bg-success">
                <div class="card-body">
                    {{#with service}}
                    <h2 class="text-center pt-2">{{title}}</h2>
                    <p class="text-center">
                        {{description}}
                    </p>
                    <div class="text-center">
                        {{#each buttons}}
                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>

        <div class="mt-5 mb-4">
            <hr>
        </div>

        <div class="col-12">
            <div class="row">
                {{#each footer}}
                <div class="col-2">
                    <div class="nav flex">
                        <ul>
                            {{#each this}}
                            <li class="list-group-item">

                                <div class="nav-item">
                                    <a href='{{link}}' class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

</main>