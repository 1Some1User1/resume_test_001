<main class="p-5">

    <div class="row">

        <div class="card">
            {{#with navigation}}
            <div class="nav flex">
                {{#each links}}
                <div class="nav-item">
                    <a href='{{href}}' class="nav-link">{{text}}</a>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>

        <div class="mt-5">
            <h1>{{header}}</h1>
        </div>

        <div class="">
            {{#with purchase}}
            <div class="col-12">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-item">
                        <a href="#" class="nav-link {{#if @first}}active{{/if}}"><b>{{this}}</b></a>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="row">
                {{#with actionBlock}}
                <div class="col-4 pt-3">
                    {{#with input}}
                    <input class="form-control" placeholder="{{placeholder}}">
                    {{/with}}
                </div>
                <div class="col-8">
                    <div class="row pt-3">
                        {{#each buttons}}
                        <div class="col-3">
                            <a href="{{link}}"
                                class="btn btn-{{#if isSuccess}}success{{else}}{{#if isOutline}}outline-success{{else}}{{#if isDanger}}outline-danger{{/if}}{{/if}}{{/if}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
            </div>

            <div>
                <hr>
            </div>

            <div>
                {{> purchaseltem}}
            </div>
            {{/with}}
        </div>

        <div class="mt-4 mb-3">
            <hr>
        </div>

        <div>
            {{#with userInfo}}
            <div class="pt-3 pb-5">
                <h1>{{title}}</h1>
            </div>
            <div class="card">
                <div class="card-body">
                    {{#with profileData}}
                    <h2 class="pb-4">{{title}}</h2>

                    <div>
                        {{#with fullName}}
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-4">
                                        {{#with surname}}
                                        <div>{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                    <div class="col-4">
                                        {{#with name}}
                                        <div>{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                    <div class="col-4">
                                        {{#with middleName}}
                                        <div>{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/with}}
                    </div>

                    <div class="pt-3">
                        {{#with otherInfo}}
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-4">
                                        {{#with birthday}}
                                        <div>{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                    <div class="col-4">
                                        {{#with sex}}
                                        <div>{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                    <div class="col-4">
                                        {{#with language}}
                                        <div>{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}


                    <div class="card mt-3">
                        <div class="card-body">
                            <div class="row">
                                {{#each buttons}}
                                <div class="col-4">
                                    <a href="{{link}}"
                                        class="btn btn-{{#if isPrimary}}primary{{else}}{{#if isSecondary}}outline-secondary{{else}}{{#if isDanger}}outline-danger{{/if}}{{/if}}{{/if}}">{{text}}</a>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    {{#with recipients}}
                    <h2>{{title}}</h2>
                    <div class="row mt-4">
                        {{#each users}}
                        <div class="col-4">
                            <div class="card">
                                <div class="card-body">
                                    <div>
                                        <b>{{name}}</b>
                                    </div>
                                    <div>{{phone}}</div>
                                    <div class="mt-3">
                                        {{#with button}}
                                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    {{#with contacts}}

                    <div class="pb-3">
                        <h2>
                            {{title}}
                        </h2>
                    </div>

                    <div class="row">
                        {{#each contactData}}
                        <div class="col-4">
                            <div class="card">
                                <div class="card-body">
                                    <div>{{title}}</div>
                                    <div>
                                        <big>
                                            <b>{{value}}</b>
                                        </big>
                                    </div>
                                    {{#with button}}
                                    <a href="{{link}}"
                                        class="btn btn-{{#if isPrimary}}primary{{else}}{{#if isSecondary}}outline-secondary{{else}}{{#if isDanger}}outline-danger{{/if}}{{/if}}{{/if}}">{{text}}</a>
                                    {{/with}}
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>

                    {{/with}}
                </div>
            </div>

            {{/with}}
        </div>

        <div class="mt-5 mb-4">
            <hr>
        </div>

        <div class="col-12">
            <div class="row">
                {{#each footer}}
                <div class="col-2">
                    <div class="nav flex">
                        <ul>
                            {{#each this}}
                            <li class="list-group-item">

                                <div class="nav-item">
                                    <a href='{{link}}' class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

</main>