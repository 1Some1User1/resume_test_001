<div>
    {{#with main}}
    <main>
        <section>
            <ul>
                {{> title data="My educations" big=true}}
                {{#each education}}
                <li>{{name}} ({{id}})
                    {{#unless isEnd}} (ще в проесі) {{/unless}}
                </li>

                {{/each}}
            </ul>
        </section>

        <section>
            <div>
                <ul>
                    {{> title data="My certificates" big=false}}
                    {{#each certificates}}
                    <li>{{name}} ({{id}})</li>

                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>