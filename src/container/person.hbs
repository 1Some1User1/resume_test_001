<div class="p-5">
    {{#with person}}
    <header>
        <div>
            <h1>{{name}}</h1>
        </div>
        <div><strong>Age: </strong>{{age}}</div>
        <div class="mb-3"><strong>Gender: </strong>{{gender}}</div>

        {{> title data='Address:'}}
        {{#each address}}
        <div>
            {{this}}
        </div>
        {{/each}}
    </header>

    <div class="mt-4 mb-4">
        <hr>
    </div>

    <main>
        <div>
            {{> title data='Education:'}}
            {{#each education}}
            <div>{{degree}}, {{major}}, {{university}}, {{graduationYear}}</div>
            {{/each}}


            <div class="mt-3">
                {{> title data='workExperience:'}}
                {{#each workExperience}}
                <div><b>Conpany: </b>{{company}}</div>
                <div><b>Position: </b>{{title}}</div>
                <div>{{startDate}} - {{endDate}}</div>
                <div><b>Responsibilities: </b>{{responsibilities}}</div>
                <div><b>Founded: </b>{{year_founded}}</div>
                <div><b>Industry: </b>{{industry}}</div>



                <div class="mt-3">
                    {{#each employees}}
                    <div>
                        <div><strong>Employees: </strong></div>
                        <div>{{name}}</div>
                        <div><b>Position: </b>{{position}}</div>
                        <div class="mb-3"><b>Department: </b>{{department}}</div>



                        {{#each projects}}
                        <div>
                            <div><strong>Projects: </strong></div>
                            <div>{{name}}</div>
                            <div class="mb-3"><b>Description: </b>{{description}} ({{status}})</div>



                            {{#each teams}}
                            <div>
                                <div>
                                    <div><strong>Team name: </strong>{{team_name}}</div>
                                    {{#with team_leader}}
                                    <div>{{name}}</div>
                                    <div>{{title}}</div>
                                    {{>link text='john.smith@example.com' href=email noLine=true }}
                                    {{/with}}
                                </div>



                                <div class="mt-3">
                                    <strong>Team members: </strong>
                                    {{#each team_members}}
                                    <div>{{name}}</div>
                                    <div>{{title}}</div>
                                    {{>link text='alice.johnson@example.com' href=email noLine=true }}
                                    <div><b>Skills: </b>{{skills}}</div>



                                    <div class="mt-3">
                                        {{#each projects}}
                                        <div><strong>{{name}}</strong></div>
                                        <div><a>{{description}}</a></div>
                                        <b>Technologies: </b>
                                        <ul>
                                            {{#each technologies}}
                                            <li>{{this}}</li>
                                            {{/each}}
                                        </ul>
                                        <div>
                                            {{#each team_members}}
                                            <strong>Team members: </strong>
                                            <div>{{name}}</div>
                                            <div>{{title}}</div>
                                            <br>
                                            {{/each}}
                                        </div>

                                        {{/each}}
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        {{/each}}
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </div>
    </main>

    {{/with}}
</div>